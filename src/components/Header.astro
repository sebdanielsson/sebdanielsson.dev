<nav class="sticky top-0 z-50 bg-neutral-950/70 py-4 backdrop-blur-sm">
  <div class="main-width flex h-8 flex-row items-center justify-between gap-2">
    <a href="/" class="flex flex-row items-center gap-3">
      <img src="/favicon.svg" alt="sebdanielsson.dev logo" class="h-6 sm:hidden sm:h-8" />
      <span
        class="hidden text-2xl font-bold text-white hover:text-[var(--accent-light)] sm:block sm:text-3xl"
        >sebdanielsson.dev</span
      >
    </a>
    <div class="flex flex-row items-center gap-2 text-sm sm:gap-6 sm:text-base">
      {
        textLinks.map(({ label, href }) => (
          <a
            aria-current={Astro.url.pathname === href}
            class:list={[
              'passing-underline',
              '!text-white',
              'hover:!text-white',
              {
                active:
                  Astro.url.pathname === href ||
                  (href !== '/' && Astro.url.pathname.startsWith(href)),
              },
            ]}
            href={href}
          >
            {label}
          </a>
        ))
      }
    </div>
    <div class="flex flex-row items-center gap-2 sm:gap-3">
      <ThemeSwitcher />
      {
        profileLinks.map(({ label, href, icon }) => (
          <a
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            class="!text-white hover:!text-[var(--accent-light)]"
          >
            <span class="sr-only">Go to my {label} profile</span>
            <div set:html={icon} />
          </a>
        ))
      }
    </div>
  </div>
</nav>
