---
import CommonHead from '@components/CommonHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import '../styles/global.css';
import '@fontsource/kalam/300.css';

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <CommonHead title={title} description={description} />
  </head>
  <body class="flex h-dvh flex-col">
    <Header />
    <slot />
    <Footer />
    <style is:global>
      :root {
        /* Common */
        --background: #101010;

        /* Accent */
        --accent-background: var(--purple-background);
        --accent-dark: var(--purple-dark);
        --accent-main: var(--purple-main);
        --accent-light: var(--purple-light);
        --accent-gradient: linear-gradient(
          90deg,
          var(--accent-light) 0%,
          var(--accent-main) 50%,
          var(--accent-dark) 100%
        );

        /* Purple */
        --purple-background: #1a1420;
        --purple-dark: #883aea;
        --purple-main: #ad79f1;
        --purple-light: #bb8ff3;

        /* Blue */
        --blue-background: #121220;
        --blue-dark: #2b6cb0;
        --blue-main: #3182ce;
        --blue-light: #4299e1;

        /* Red */
        --red-background: #181009;
        --red-dark: #c53030;
        --red-main: #e53e3e;
        --red-light: #fc8181;

        /* Yellow */
        --yellow-background: #1c1a01;
        --yellow-dark: #d69e2e;
        --yellow-main: #ecc94b;
        --yellow-light: #f6e05e;

        /* Green */
        --green-background: #101810;
        --green-dark: #2f855a;
        --green-main: #38a169;
        --green-light: #48bb78;
      }

      html {
        font-family: system-ui, sans-serif;
        background: var(--background);
      }

      code {
        font-family:
          ui-monospace, 'Cascadia Code', 'Source Code Pro', 'DejaVu Sans Mono', monospace;
      }

      .handwritten {
        font-family: Kalam, 'Segoe Print', 'Bradley Hand', Chilanka, 'TSCu_Comic', casual, cursive;
      }

      .main-width {
        margin: auto;
        width: 95vw;
      }

      @media screen and (width >= 640px) {
        .main-width {
          width: 95vw;
        }
      }

      @media screen and (width >= 768px) {
        .main-width {
          width: 90vw;
        }
      }

      @media screen and (width >= 1024px) {
        .main-width {
          width: 85vw;
        }
      }

      @media screen and (width >= 1280px) {
        .main-width {
          width: 80vw;
        }
      }

      @media screen and (width >= 1536px) {
        .main-width {
          width: calc(1536px - 4rem);
        }
      }

      main {
        color: white;
        font-size: 16px;
        line-height: 1.6;
        flex: 1;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        margin-top: 0.5em;
        margin-bottom: 0.5em;
        color: var(--accent-main);
      }

      @media (width >= 640px) {
        h1 {
          font-size: 3rem;
          margin-top: 1em;
          margin-bottom: 0.5em;
        }
      }

      h2 {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1;
        margin-top: 1em;
        margin-bottom: 0.5em;
        color: var(--accent-main);
      }

      h3 {
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
        margin-top: 1em;
        margin-bottom: 0.5em;
        color: var(--accent-main);
      }

      a {
        color: var(--accent-main);
        text-decoration: none;
      }

      a:hover {
        color: var(--accent-light);
      }

      .text-gradient {
        background-image: var(--accent-gradient);
        background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .passing-underline {
        display: inline-block;
        position: relative;
      }

      .passing-underline::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        bottom: 0;
        left: 0;
        background-color: var(--accent-main);
        transform: scaleX(0);
        transform-origin: bottom left;
        transition: transform 0.4s ease-out;
        color: var(--accent-main);
      }

      .passing-underline:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
      }
    </style>
  </body>
</html>
