---
import Layout from "@/layouts/Layout.astro";
import ItemCard from "@/components/ItemCard.astro";
import stuffIUse from "@/data/stuffIUse.json";
---

<Layout title="About">
  <main class="main-width py-12">
    <h1 class="my-0">About</h1>
    <h2>Things I Use</h2>
    <p>Here are some of the hardware, software, and tools that I use.</p>
    <p></p>
    <h3>Hardware</h3>
    <div class="my-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {stuffIUse.hardware.map((item) => <ItemCard item={item} loading="eager" />)}
    </div>
    <h3>Software</h3>
    <div class="my-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {stuffIUse.software.map((item) => <ItemCard item={item} loading="lazy" />)}
    </div>
    <h3>Coffee</h3>
    <div class="my-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {stuffIUse.coffee.map((item) => <ItemCard item={item} loading="lazy" />)}
    </div>
  </main>
</Layout>
