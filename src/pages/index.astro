---
import Layout from '@layouts/Layout.astro';
import { Picture } from 'astro:assets';
import sebastianImage from '@assets/sebastian.webp';

const firstName = 'Sebastian';
---

<Layout>
  <main class="main-width flex flex-col">
    <div
      class="lg:3/4 flex flex-col items-center justify-center gap-10 self-center md:flex-row md:gap-20 2xl:w-2/3"
    >
      <div class="w-1/3 sm:flex-[0_0_33%]">
        <Picture
          src={sebastianImage}
          alt="Sebastian"
          width={405}
          height={405}
          loading="eager"
          formats={['avif', 'webp']}
          fallbackFormat="webp"
          class="rounded-full border-4 border-white"
        />
      </div>
      <div class="flex flex-col">
        <h1 class="mt-0">
          <span id="greeting">Hello!</span><br /> My name is <span
            id="firstName"
            class="text-gradient">{firstName}!</span
          >
        </h1>
        <p class="text-lg leading-8">
          I am a final-year computer science student with a keen interest in containerization,
          Linux, and infrastructure-as-code. Currently, I live in the small town of Borl√§nge,
          Sweden, with my partner and our three children. When I'm not studying, I explore new
          projects related to my interests and relax with movies and gaming. If you read this far,
          you should definitely leave a comment on the <a href="/guestbook" data-astro-reload
            >guestbook</a
          >!
        </p>
      </div>
    </div>
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const date = new Date();
    const hour = date.getHours();

    let greeting = 'Hello!';

    if (hour < 4) {
      greeting = 'Hello, night owl!';
    } else if (hour < 12) {
      greeting = 'Good morning!';
    } else if (hour < 18) {
      greeting = 'Good afternoon!';
    } else {
      greeting = 'Good evening!';
    }

    const greetingElement = document.getElementById('greeting');
    if (greetingElement) {
      greetingElement.textContent = greeting;
    } else {
      console.error('Element with ID "greeting" not found.');
    }
  });
</script>
